{
  "name": "al-marya-rostery-backend",
  "version": "2.0.0",
  "description": "Al Marya Rostery Backend with Auto Firebase Sync",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "lint": "eslint .",
    "build": "echo 'No build step required for Node.js'",
    "render-build": "npm install",
    "render-start": "node server.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "firebase-admin": "^11.10.1",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "eslint": "^8.47.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/roobiinpandey/al_marya_rostary.git"
  },
  "keywords": [
    "nodejs",
    "express", 
    "mongodb",
    "firebase",
    "restaurant",
    "rostery",
    "api"
  ],
  "author": "Al Marya Rostery Team",
  "license": "MIT",
  "render": {
    "buildCommand": "npm install",
    "startCommand": "node server.js",
    "envVars": [
      {
        "key": "NODE_ENV",
        "value": "production"
      },
      {
        "key": "PORT",
        "generateValue": true
      }
    ]
  }
}
