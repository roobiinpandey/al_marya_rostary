{
  "name": "al-marya-rostery-backend",
  "version": "1.0.0",
  "description": "Backend API for Al Marya Rostery coffee ordering app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:clean": "./kill-port.sh && npm run dev",
    "kill:port": "./kill-port.sh",
    "build": "echo 'No build step required'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed:all": "node scripts/seed-all.js",
    "seed:tiers": "node scripts/seed-loyalty-tiers.js",
    "seed:plans": "node scripts/seed-subscription-plans.js",
    "seed:sample": "node scripts/seed-sample-data.js",
    "test:api": "node test-api.js",
    "db:cleanup": "node scripts/cleanup-database-indexes.js",
    "db:monitor": "node scripts/database-monitor.js",
    "db:snapshot": "node scripts/database-monitor.js --snapshot",
    "db:slow-queries": "node scripts/database-monitor.js --slow-queries",
    "db:optimize": "node scripts/database-optimizer.js",
    "db:optimize-small": "node scripts/optimize-small-db.js",
    "loyalty:sync": "node scripts/loyalty-user-sync.js",
    "loyalty:check": "node scripts/loyalty-auto-sync.js --validate",
    "loyalty:fix": "node scripts/loyalty-auto-sync.js --fix",
    "loyalty:welcome": "node scripts/award-welcome-bonus.js",
    "firebase:sync": "node scripts/firebase-first-sync.js",
    "firebase:validate": "node scripts/firebase-webhook-sync.js validate"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "coffee",
    "api",
    "mongodb",
    "express"
  ],
  "author": "Al Marya Rostery",
  "license": "ISC",
  "dependencies": {
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.6.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.29.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.9",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "validator": "^13.15.15"
